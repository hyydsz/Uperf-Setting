<resources>
    <style name="Base.Theme.UperfSetting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/afacad</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="UperfSetting.Blue" parent="Base.Theme.UperfSetting">
        <item name="main_theme_color">#2196F3</item>
    </style>

    <style name="UperfSetting.Orange" parent="Base.Theme.UperfSetting">
        <item name="main_theme_color">#FF5722</item>
    </style>

    <style name="UperfSetting.Yellow" parent="Base.Theme.UperfSetting">
        <item name="main_theme_color">#FFEB3B</item>
    </style>

    <style name="UperfSetting.Green" parent="Base.Theme.UperfSetting">
        <item name="main_theme_color">#4CAF50</item>
    </style>

    <style name="UperfSetting.Red" parent="Base.Theme.UperfSetting">
        <item name="main_theme_color">#E91E1E</item>
    </style>

    <style name="base_mode_menu_color">
        <item name="android:background">@android:color/transparent</item>

        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabRippleColor">#00FFFFFF</item>

        <item name="tabMaxWidth">9999sp</item>
    </style>

    <!-- !-->
    
    <style name="base_bottom_logger" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- !-->

    <style name="base_mode_select" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="dialogCornerRadius">15sp</item>

        <item name="colorControlActivated">?attr/main_theme_color</item>
    </style>

</resources>